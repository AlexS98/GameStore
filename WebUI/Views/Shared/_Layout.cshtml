<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <style>
        .navbar-right {
            float: right !important;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">
            <span class="hidden-xs">GAMES STORE</span>
            <div class="visible-xs">GAMES</div>
            <div class="visible-xs">STORE</div>
        </a>

        @if (ViewBag.UserName != "" && ViewBag.UserName != null && ViewBag.UserName != String.Empty)
        {
            @Html.ActionLink("Log out", "Logout", "Account", null, new { @class = "btn btn-info pull-right btn-sm col-sm-1" })
            <p class="btn btn-success pull-right btn-sm col-sm-1">Hello, @ViewBag.UserName</p>
        }
        else
        {
            @Html.ActionLink("Registration", "RegisterUser", "Account", null, new { @class = "btn btn-info pull-right btn-lg col-sm-1" })
            @Html.ActionLink("Log in", "UserLogin", "Account", null, new { @class = "btn btn-info pull-right btn-lg col-sm-1" })
        }
    </div>
    <div class="visible-xs">
        <!--Html.Action("Menu", "Nav", new { horizontalLayout = true })-->
    </div>
    <div class="row panel">
        <div class="col-sm-1 hidden-xs"></div>
        <div class="col-xs-12 col-sm-10">
            @RenderBody()
        </div>
    </div>
</body>
</html>