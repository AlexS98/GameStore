@model WebUI.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<hr />

@using (Html.BeginForm("UserLogin", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table class="table table-striped" style="width: 60%">
        <tbody>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <tr>
                <th>
                    @Html.LabelFor(model => model.Nickname)
                </th>
                <th>
                    @Html.EditorFor(x => x.Nickname)
                </th>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.Password)
                </th>
                <th>
                    @Html.EditorFor(x => x.Password)
                </th>
            </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary login-button">Log in</button>
    @Html.ActionLink("Register", "RegisterUser", "Account", new { @class = "btn btn-primary login-button" })
}
