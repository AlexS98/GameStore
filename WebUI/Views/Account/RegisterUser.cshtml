@model WebUI.Models.ViewModels.PersonViewModel

@{
    ViewBag.Title = "RegisterUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Registration</h2>
<hr />

@using (Html.BeginForm("RegisterUser", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table class="table table-striped" style="width: 60%">
        <tbody>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <tr>
                <th>
                    @Html.LabelFor(model => model.Nickname)
                </th>
                <th>
                    @Html.EditorFor(x => x.Nickname)
                </th>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.Email)
                </th>
                <th>
                    @Html.EditorFor(x => x.Email)
                </th>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.Password)
                </th>
                <th>
                    @Html.EditorFor(x => x.Password)
                </th>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.ConfirmPassword)
                </th>
                <th>
                    @Html.EditorFor(x => x.ConfirmPassword)
                </th>
            </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary login-button">Confirm</button>

}


